datasource postgresql {
  provider         = "postgresql"
  url              = env("POSTGRES_URL")
}

generator db {
    provider = "go run github.com/prisma/prisma-client-go"
    // set the output folder and package name
    output           = "../src/gen/db"
    package          = "db"
}

model User {
    id           String   @default(cuid()) @id
    createdAt    DateTime @default(now())
    name         String
    email        String
    passwordHash String
}
